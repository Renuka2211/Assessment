<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/dialog_background"
    android:padding="10dp">

    <TextView
        android:id="@+id/tvProductName"
        android:layout_height="wrap_content"
        android:text="Prod"
        android:layout_width="match_parent"
        android:textSize="18dp"
        android:textColor="@color/darkest_blue"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"


        />
  <!--  <View
        android:id="@+id/view"
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:layout_below="@+id/tvProductName"
        android:background="#000000"
        android:layout_marginBottom="10dp"


        />-->
    <TextView
        android:id="@+id/tvColorLable"
        android:layout_height="wrap_content"
        android:text="Color: "
        android:layout_width="wrap_content"
        android:layout_below="@+id/tvProductName"
        android:textColor="@color/blue"
        android:layout_marginBottom="10dp"

        />
    <TextView
        android:id="@+id/tvColor"
        android:layout_height="wrap_content"
        android:text="klfhsd"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tvProductName"
        android:layout_toRightOf="@+id/tvColorLable"
        android:textColor="@color/dark_blue"
        android:layout_marginBottom="10dp"

        />

    <TextView
        android:id="@+id/tvSizeLable"
        android:layout_height="wrap_content"
        android:text="Size: "
        android:layout_width="wrap_content"
        android:layout_below="@+id/tvColor"
        android:textColor="@color/blue"
        android:layout_marginBottom="10dp"


        />
    <TextView
        android:id="@+id/tvSize"
        android:layout_height="wrap_content"
        android:text="klfhsd"
        android:layout_width="match_parent"
        android:layout_below="@+id/tvColor"
        android:layout_toRightOf="@+id/tvSizeLable"
        android:textColor="@color/dark_blue"
        android:layout_marginBottom="10dp"

        />

    <TextView
        android:id="@+id/tvPriceLable"
        android:layout_height="wrap_content"
        android:text="Price: "
        android:layout_width="wrap_content"
        android:layout_below="@+id/tvSize"
        android:textColor="@color/blue"
        android:layout_marginBottom="10dp"


        />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_height="wrap_content"
        android:text="klfhsd"
        android:layout_width="match_parent"
        android:layout_below="@+id/tvSize"
        android:layout_toRightOf="@+id/tvPriceLable"
        android:textColor="@color/dark_blue"
        android:layout_marginBottom="10dp"

        />

</RelativeLayout>